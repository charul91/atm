<Window x:Class="AtmSimulator.AccountMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Account Menu" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Account Menu" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>
            <Button Content="Check Balance" Width="150" Height="30" Click="CheckBalanceButton_Click"/>
            <Button Content="Deposit" Width="150" Height="30" Margin="0,10,0,0" Click="DepositButton_Click"/>
            <Button Content="Withdraw" Width="150" Height="30" Margin="0,10,0,0" Click="WithdrawButton_Click"/>
            <Button Content="Display Transactions" Width="150" Height="30" Margin="0,10,0,0" Click="DisplayTransactionsButton_Click"/>
            <Button Content="Exit Account" Width="150" Height="30" Margin="0,10,0,0" Click="ExitAccountButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
